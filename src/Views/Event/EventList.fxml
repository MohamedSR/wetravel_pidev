<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="eventsPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.Event.EventListController">
    <children>
        <TableView fx:id="eventList" layoutY="37.0" prefHeight="323.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="75.0" text="Nom" />
                <TableColumn fx:id="adresseCol" prefWidth="75.0" text="address" />
                <TableColumn fx:id="paysCol" prefWidth="75.0" text="Pays" />
                <TableColumn fx:id="villeCol" prefWidth="75.0" text="Ville" />
                <TableColumn fx:id="capacityCol" prefWidth="75.0" text="Capacity" />
                <TableColumn fx:id="dateCol" prefWidth="75.0" text="date" />
                <TableColumn prefWidth="75.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Button layoutX="8.0" layoutY="3.0" mnemonicParsing="false" onAction="#AjouterEvent" prefHeight="32.0" prefWidth="143.0" style="-fx-background-color: #fff;" text="Ajouter un événement">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button layoutX="212.0" layoutY="-3.0" mnemonicParsing="false" onAction="#ModifierEvent" prefHeight="39.0" prefWidth="162.0" style="-fx-background-color: #ffff;" text="Modifier un événement" textOverrun="CLIP">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="429.0" layoutY="-4.0" mnemonicParsing="false" onAction="#SupprimerEvent" prefHeight="39.0" prefWidth="161.0" style="-fx-background-color: #ffff;" text="Supprimer un événement">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
    </children>

</AnchorPane>
